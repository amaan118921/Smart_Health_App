<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvConfirm"
        android:text="@string/are_you_sure_you_want_to_sign_out"
        android:gravity="center"
        android:textSize="14sp"
        android:fontFamily="@font/spartanmedium500"
        android:textColor="@color/app_theme"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivCancel"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnYes"
        android:backgroundTint="@color/app_theme"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="@string/yes"
        android:fontFamily="@font/spartanmedium500"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvConfirm"
        app:layout_constraintStart_toStartOf="@id/tvConfirm"
        app:layout_constraintEnd_toEndOf="@id/tvConfirm"
        android:layout_marginTop="18dp"/>
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/ivCancel"
        android:src="@drawable/cross"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>