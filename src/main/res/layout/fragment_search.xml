<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvSearchQuery"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/app_theme"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ivBack"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
            <EditText
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="47dp"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintEnd_toStartOf="@id/ivClear"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:id="@+id/etSearch"
                android:background="@null"
                android:focusedByDefault="true"
                android:hint="@string/search"
                android:textColorHint="@color/white"
                android:fontFamily="@font/spartanreg"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:theme="@style/search_et"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/ivClear"
                android:src="@drawable/x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rvSearchDoc"
        app:layout_constraintTop_toBottomOf="@id/cvSearchQuery"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_view_doctor"
        />


</androidx.constraintlayout.widget.ConstraintLayout>